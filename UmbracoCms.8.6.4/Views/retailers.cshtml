        <div class="product-grid">
            @if (Model.CurrentRetailers != null)
            {
                foreach (Retailer retailer in Model.CurrentRetailers)
                {
                    <a href="@retailer.Url" class="product-grid__item" style="background-image: url('@retailer.RetailImage.Url')">
                        <div class="product-grid__item__overlay">
                            <div class="product-grid__item__name">@retailer.RetailerName</div>
                        </div>
                    </a>
                }
            }
        </div>
    </div>

</section>